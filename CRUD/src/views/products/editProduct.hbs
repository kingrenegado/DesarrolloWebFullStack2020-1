{{!-- Validacion formulario --}}
<p></p>
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
<button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
<span aria-hidden="true">&times;</span>
</div>
{{/each}}


<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/editProduct/{{updateProduct._id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
                <label class="form-label">Nombre del Producto</label>
                <input type="text" name="nombre" id="nombre" class="form-control"  value="{{updateProduct.nombre}}">
                                <label class="form-label">Descripcion del Producto</label>
                <textarea name="descripcion" class="form-control" rows="5">{{updateProduct.descripcion}}</textarea>
                                                <label class="form-label">Cantidad del Producto</label>
                <input type="number" name="cantidad" id="cantidad" class="form-control" value="{{updateProduct.cantidad}}" min="1">
                <p></p>
                <button class="btn btn-success"> Editar Producto</button>
            </form>
        </div>
    </div>
</div>