<p></p>
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
<button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
<span aria-hidden="true">&times;</span>
</div>
{{/each}}

<div class="row">
<div class="col-sm-4 col-xs-4 col-lg-4"></div>
<div class="col-sm-4 col-xs-4 col-lg-4">
    <div class="card text-left">
        <div class="card-header">
            <h3>Editar Servicio</h3>
        </div>
        <div class="card-body">
            <form action="/services/editServices/{{updateService._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <label class="form-label">Nombre del Servicio</label>
                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Escribe el nombre del producto" value="{{updateService.nombre}}">
                <label class="form-label">Descripcion del Servicio</label>
                <textarea name="descripcion" class="form-control" rows="5">{{updateService.descripcion}}</textarea>                     
                <label class="form-label">Precio</label>
                <input type="number" name="precio" id="precio" class="form-control" value="{{updateService.precio}}">
                <p></p>
                <button class="btn btn-success"> Editar Servicio</button>
            </form>
        </div>
    </div>
</div>
<div class="col-sm-4 col-xs-4 col-lg-4"></div>
</div>
<p></p>
<br>